<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WeChipItAvalonia.ViewModels"
        x:Class="WeChipItAvalonia.Views.RecordMicrochipWindow"
        Title="Record Microchip"
        Width="400"
        Height="300">
    <Design.DataContext>
        <vm:RecordMicrochipWindowViewModel />
    </Design.DataContext>
    <StackPanel Margin="10" Spacing="10">
        <!-- Customer Name -->
        <TextBlock Text="Customer Name:" />
        <TextBox Text="{Binding CustomerName}" />

        <!-- Animal Name -->
        <TextBlock Text="Animal Name:" />
        <TextBox Text="{Binding AnimalName}" />

        <!-- Microchip Number -->
        <TextBlock Text="Microchip Number:" />
        <TextBox Text="{Binding MicrochipNumber}" />

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Cancel" Command="{Binding CancelCommand}" />
            <Button Content="Save" Command="{Binding SaveCommand}" />
        </StackPanel>
    </StackPanel>
</Window>